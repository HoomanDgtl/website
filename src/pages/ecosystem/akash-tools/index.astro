---
import { getCollection } from "astro:content";

import EcosystemPage from "@/components/ecosystem-pages/ecosystem-page.astro";

const projects = (await getCollection("Ecosystem_Page"))
  .filter(
    (project) =>
      project.data.category === "tool" ||
      project.data.category.includes("tool"),
  )
  .sort((a, b) => {
    const dateA = new Date(a.data.pubDate);
    const dateB = new Date(b.data.pubDate);

    return dateB.getTime() - dateA.getTime();
  });

const tags: string[] = [];

projects.forEach((project) => {
  project.data.tags.forEach((tag: string) => {
    const lowerCasedTag = tag.toLowerCase();

    if (!tags.includes(lowerCasedTag)) {
      tags.push(lowerCasedTag);
    }
  });
});
const softwareListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: projects.map((project, index) => ({
    "@type": "ListItem",
    position: index + 1,
    item: {
      "@type": "SoftwareApplication",
      name: project.data.projectTitle,
      description: project.data.description,
      applicationCategory: project.data.tags.join(", "),
      url: project.data.websiteLink,
    },
  })),
};
---

<EcosystemPage
  title="Explore the Akash Toolset"
  tags={tags}
  projects={projects}
  type="tool"
>
  <script
    type="application/ld+json"
    set:html={JSON.stringify(softwareListSchema)}
  />
</EcosystemPage>
