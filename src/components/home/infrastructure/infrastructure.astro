---
const { infrastructureSection } = Astro.props;
---

<section class="container mb-10">
  <div class="border-b border-paraDark pb-[80px] pt-0 md:pb-[120px] md:pt-10">
    <h2 class="text-center text-xl font-medium md:text-[28px]">
      {infrastructureSection.title}
    </h2>

    <div class="mt-10 lg:mt-20">
      <div
        class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3 3xl:grid-cols-6 3xl:gap-6"
      >
        {
          infrastructureSection.cards.map((card: any) => (
            <div class="flex flex-col items-start ">
              <div class="flex-shrink-0  rounded-lg border border-paraDark bg-background2 p-3 ">
                <svg class="h-6 w-6 " fill="currentColor" viewBox="0 0 24 24">
                  <use
                    xlink:href={`${card.image.src}#img`}
                    href={`${card.image.src}#img`}
                  />
                </svg>
              </div>

              <div class="mt-5   md:mt-6">
                <h3
                  class="text-base font-semibold md:h-14 "
                  set:html={card.title}
                />
                <p
                  set:html={card.description}
                  class=" mt-2 flex-shrink-0 text-xs  md:mt-4 md:text-sm "
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
