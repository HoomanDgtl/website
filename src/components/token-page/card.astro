---
const { icon, title, description } = Astro.props;
---

<div class="flex flex-col items-start">
  <div class="rounded-lg border border-paraDark bg-background2 p-3">
    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
      <use xlink:href={`${icon.src}#img`} href={`${icon.src}#img`}></use>
    </svg>
  </div>

  <h3 class="mt-5 text-base font-semibold md:mt-6 md:text-xl">
    {title}
  </h3>
  <p class="mt-2 text-sm font-normal md:mt-3 md:text-base">
    {description}
  </p>
</div>
