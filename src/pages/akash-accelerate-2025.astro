---
import "@/styles/globals.css";

import Header from "@/components/header/header.astro";

import BaseLayout from "@/layouts/base-layout.astro";

import Accfooter from "@/components/acc-2025/accfooter.astro";
import Head from "@/components/acc-2025/head.astro";
import Highlights from "@/components/acc-2025/highlights.astro";
import Information from "@/components/acc-2025/information.astro";
import Location from "@/components/acc-2025/location.astro";
import Speakers from "@/components/acc-2025/speakers.astro";
import { ArrowUpCircle } from "lucide-react";
---

<BaseLayout
  title="Akash Accelerate 2025"
  description="Akash Accelerate is a full-day summit that will bring together the entire ecosystem for a packed agenda of talks, panels, and discussions exploring the future of decentralized compute and open-source AI."
  image="/meta-images/acc-2025.png"
  classname="dark !bg-[#111111] "
>
  <Header
    hideDarkToggle
    overrideClassName="!bg-[#111111]  top-0 sticky z-[30] "
    navClassName="container-nav-2"
  />

  <main>
    <Head />
    <a
      href="https://www.youtube.com"
      target="_blank"
      class="flex w-full items-center justify-center bg-[#434343] py-3 text-xl font-semibold text-white"
    >
      <ArrowUpCircle className="mr-2  size-6 rotate-45" />
      Watch the 2024 Recap
    </a>
    <div class="bg-[#2C2C2C]">
      <Speakers />
    </div>
    <Location />
    <Highlights />

    <Information />
    <section class="w-full">
      <img
        src="/images/acc-2025/acc.png"
        alt="Akash Accelerate 2025"
        class="w-full"
      />
    </section>
    <Accfooter />
  </main>
</BaseLayout>
