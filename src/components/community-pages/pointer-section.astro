---
import clsx from "clsx";
type Props = {
  title: string;
  items: string[];
  image: string;
  reverse?: boolean;
};
const { title, items, image, reverse } = Astro.props;
---

<div
  class={clsx(
    "not-prose mx-auto mt-0 flex max-w-[1155px] flex-col gap-8 text-base  md:gap-14",
    reverse ? "md:flex-row-reverse" : "md:flex-row"
  )}
>
  <div class="flex flex-1 flex-col gap-4">
    <h2 class="text-3xl font-semibold">{title}</h2>
    <ul class="list-disc space-y-0.5 pl-5 text-sm text-para md:text-base">
      {items.map((item) => <li>{item}</li>)}
    </ul>
  </div>
  <div class="relative order-first flex-1 md:order-last">
    <img src={image} alt={title} class="relative z-10 m-0 max-w-full" />
  </div>
</div>
