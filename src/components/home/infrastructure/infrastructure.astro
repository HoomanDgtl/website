---

<section class="bg-[url('/images/trustedby/gradient2.svg')] bg-center py-20">
  <div class="container flex flex-col gap-20">
    <div class="flex flex-col gap-2">
      <div class="flex flex-col items-center justify-center gap-2">
        <h2 class="text-center text-xl font-medium md:text-[28px]">
          {infrastructureSection.title}
        </h2>
        <p class="mt-1 text-center text-base text-paraDark">
          {infrastructureSection.description}
        </p>
      </div>
      <div class="mt-10">
        <div class="grid grid-cols-5 gap-10 3xl:gap-6">
          {
            infrastructureSection.cards.map((card: any) => (
              <FeatureCard card={card} />
            ))
          }
        </div>
      </div>
    </div>
    <div>
      <div class="flex flex-col items-center justify-center gap-2">
        <h2 class="text-center text-xl font-medium md:text-[28px]">
          {whyChooseSection.title}
        </h2>
        <p class="mt-1 text-center text-base text-paraDark">
          {whyChooseSection.description}
        </p>
      </div>
      <div class="mt-10">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3">
          {
            whyChooseSection.cards.map((card: any) => (
              <div class="flex flex-col items-start rounded-lg border bg-background p-6 shadow-xl">
                <div class="flex size-12 items-center justify-center rounded-lg border border-paraDark bg-background2">
                  <div set:html={card.icon} />
                </div>
                <div class="mt-5 flex flex-1 flex-col">
                  <h3 class="text-base font-semibold" set:html={card.title} />
                  <p class="mt-3 flex-grow text-sm font-medium leading-[20px] text-paraDark md:mt-4">
                    {card.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
