---
import { Heart, MessageSquare, Mic, User, Users } from "lucide-react";
---

<section>
  <div class="border-b-2 py-10 dark:border-[#D9D9D9]">
    <div class="container">
      <div class="flex flex-col gap-10 md:px-[120px] 2xl:px-[137px]">
        <h3 class="text-3xl font-semibold 2xl:text-4xl">
          Things to see and do
        </h3>

        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
          <!-- Inspiring Talks & Keynotes -->
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
              <Mic className="size-10" />

              <Heart className="size-10" />
            </div>
            <h4 class="text-2xl font-semibold 2xl:text-3xl">
              Inspiring Talks &<br />
              Keynotes
            </h4>
            <p class="text-foreground 2xl:text-lg">
              Hear from top minds in decentralized compute and open-source AI as
              they share insights on the latest tech, real-world applications,
              and where the industry is headed.
            </p>
          </div>

          <!-- Engaging Panels & Discussions -->
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
              <MessageSquare className="size-10" />
            </div>
            <h4 class="text-2xl font-semibold 2xl:text-3xl">
              Engaging Panels &<br /> Discussions
            </h4>
            <p class="text-foreground 2xl:text-lg">
              Join deep-dive conversations on scaling AI, decentralized cloud
              infrastructure, and the economics of open-source compute. Get
              perspectives from developers, founders, and researchers.
            </p>
          </div>

          <!-- Networking & Collaboration -->
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
              <Users className="size-10" />

              <User className="size-10" />
            </div>
            <h4 class="text-2xl font-semibold 2xl:text-3xl">
              Networking &<br /> Collaboration
            </h4>
            <p class="text-foreground 2xl:text-lg">
              Meet builders, connect with partners, and explore new ideas.
              Whether it's in breakout sessions, demos, or casual meetups,
              there's plenty of room to collaborate and grow.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
