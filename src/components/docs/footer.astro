---
// Import required assets
import { DiscordIcon, GithubIcon, TwitterIcon } from "../header/icons";
---

<footer
  class="mt-20 border-t border-[#e6e8eb] px-6 py-10 dark:border-[#333] md:px-10"
>
  <div
    class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <!-- Akash Logo -->
      <svg
        width="15"
        height="13"
        viewBox="0 0 49 42"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="flex-shrink-0"
      >
        <path
          d="M32.6461 28L40.6323 41.9964H24.5002L16.4297 28H32.6461Z"
          fill="url(#paint0_linear_footer)"></path>
        <path
          d="M40.628 41.9977L48.6852 28.0014L32.5575 0.00195312H16.4297L40.628 41.9977Z"
          fill="#FF414C"></path>
        <path
          d="M8.36851 13.9912H24.4963L8.37522 41.9907L0.304688 27.9943L8.36851 13.9912Z"
          fill="#FF414C"></path>
        <defs>
          <linearGradient
            id="paint0_linear_footer"
            x1="24.1078"
            y1="31.4804"
            x2="40.5695"
            y2="42.0771"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color="#FF414C"></stop>
            <stop offset="1" stop-color="#FF414C" stop-opacity="0"></stop>
          </linearGradient>
        </defs>
      </svg>
      <span class="text-sm font-medium text-[#687076]">akash.network</span>
    </a>

    <!-- Copyright and Links - Desktop -->
    <div class="hidden items-center gap-4 lg:flex">
      <span class="text-xs text-[#7e868c]">
        © Akash Network {new Date().getFullYear()} The Akash Network Authors Documentation
        Distributed under CC BY 4.0
      </span>
      <span class="h-4 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
      <span class="text-xs text-[#7e868c]"
        >Open-source Apache 2.0 Licensed.</span
      >
      <span class="h-4 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
      <span class="text-xs text-[#7e868c]">GitHub v0.38.2</span>
      <span class="h-4 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
      <a
        href="/privacy/"
        class="text-xs text-[#7e868c] transition-colors hover:text-[#ff414c]"
        >Privacy</a
      >
    </div>

    <!-- Social Icons -->
    <div class="flex items-center gap-3 text-[#687076] dark:text-[#888]">
      <a
        href="https://x.com/akashnet"
        target="_blank"
        class="transition-colors hover:text-[#ff414c]"
        aria-label="Twitter"
      >
        <TwitterIcon />
      </a>
      <a
        href="https://github.com/akash-network"
        target="_blank"
        class="transition-colors hover:text-[#ff414c]"
        aria-label="GitHub"
      >
        <GithubIcon />
      </a>
      <a
        href="https://discord.com/invite/akash"
        target="_blank"
        class="transition-colors hover:text-[#ff414c]"
        aria-label="Discord"
      >
        <DiscordIcon />
      </a>
      <a
        href="https://www.youtube.com/@AkashNetwork"
        target="_blank"
        class="transition-colors hover:text-[#ff414c]"
        aria-label="YouTube"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path
            d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"
          ></path>
          <path d="m10 15 5-3-5-3z"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Mobile Copyright and Links -->
  <div
    class="mt-6 flex flex-wrap items-center justify-center gap-x-3 gap-y-2 lg:hidden"
  >
    <span class="text-xs text-[#7e868c]">
      © Akash Network {new Date().getFullYear()}
    </span>
    <span class="h-3 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
    <span class="text-xs text-[#7e868c]">Apache 2.0 Licensed</span>
    <span class="h-3 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
    <span class="text-xs text-[#7e868c]">v0.38.2</span>
    <span class="h-3 w-px bg-[#e6e8eb] dark:bg-[#333]"></span>
    <a
      href="/privacy/"
      class="text-xs text-[#7e868c] transition-colors hover:text-[#ff414c]"
      >Privacy</a
    >
  </div>
</footer>
