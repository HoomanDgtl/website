    </p>
  </div>
  <div class="flex grid-cols-5 gap-5 overflow-x-auto md:grid">
    {
      responsibilities.map((responsibility) => (
        <FeatureCard
          autoHeight
          className="min-w-[145px] w-full lg:min-w-[unset]"
          card={responsibility}
          icon={responsibility.icon}
        />
      ))
    }
